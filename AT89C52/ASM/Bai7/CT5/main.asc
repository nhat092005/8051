ORG 0000H

MAIN:

	RAMLOC EQU 07FFAH
	COUNT EQU 8

	MOV DPTR, #RAMLOC
	MOV R3, #COUNT
	MOV A, #01H
	
rep1:

	MOVX @DPTR, A
	RL A
	INC DPTR
	DJNZ R3, rep1
	
	MOV DPTR, #RAMLOC
	MOV R3, #COUNT

rep2:
	MOVX A, @DPTR
	MOV P1, A
	CALL DELAY
	INC DPTR
	DJNZ R3, rep2
	
	JMP MAIN
	
DELAY:
	MOV R1, #200
LAP1:
	MOV R0, #200
LAP:
	NOP
	NOP
	NOP
	DJNZ R0, LAP
	DJNZ R1, LAP1
	RET
	
END
	