ORG 0000H

BEGIN_ENTRY:
	SETB C
	MOV A, #00000000B
	
LOOP:
	MOV P2, A
	RLC A
	CALL DELAY200ms
	JNC LED_OFF
	JC LED_ON
	JMP LOOP

LED_OFF:
	SETB C
	JMP LOOP
	
LED_ON:
	SETB C
	MOV A, #00000000B
	JMP LOOP
	
DELAY200ms:
	MOV R2, #200
LAP2:
	MOV R1, #200
LAP1:
	NOP
	NOP
	NOP
	DJNZ R1, LAP1
	DJNZ R2, LAP2
	RET
	
END
