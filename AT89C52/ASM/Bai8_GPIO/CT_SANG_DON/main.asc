ORG 0000H

BEGIN_ENTRY:
	MOV R0, #00H
    
LOOP_PATTERN:
	MOV A, R0
  MOV DPTR, #PATTERN_TABLE
  MOVC A, @A+DPTR
    
  MOV P2, A
  CALL DELAY200ms
    
  INC R0
  CJNE R0, #38, LOOP_PATTERN  
    
  MOV R0, #00H
  JMP LOOP_PATTERN
    
DELAY200ms:
	MOV R2, #200
LAP2:
	MOV R1, #200
LAP1:
